%html
  %head
    %title {{page.title}}
    %link{href: "{{ site.baseurl }}assets/css/style.css", rel: "stylesheet"}/
    %link{href: "{{ site.baseurl }}assets/css/main.css", rel: "stylesheet"}/
    %meta{:content => "Andrew Baraff, Attorney at Law, serves small, middle-market and growing businesses and investors in the fields of real estate, commercial transactions, general corporate matters and special situations.", :name => "description"}/
    %meta{:content => "lawyer, law, real estate", :name => "keywords"}/
    %meta{:content => "text; charset=utf-8", "http-equiv" => "Content-Type"}/
